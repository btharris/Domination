<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Platform.AppCompat" parent="@*android:style/Theme.Material" />

    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.Material">
        <item name="android:windowBackground">@*android:color/background_floating_material_dark</item>
    </style>

    <style name="Base.CardView" parent="@*android:style/Widget">
        <item name="cardCornerRadius">2.0dip</item>
        <item name="cardElevation">2.0dip</item>
